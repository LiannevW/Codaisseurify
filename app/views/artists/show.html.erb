<h1><%= @artist.name %></h1>

<h4>All songs!</h4>

<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
      <li><%= song.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>This artist did not produce songs.</p>
<% end %>

<%= link_to "[Delete]", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" } %>
